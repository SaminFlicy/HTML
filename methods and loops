    <h1 id="show"></h3>
    <h1 id="result"></h1>

    <button onclick="sum()">click to see the result</button>
    

    <script>
        var a = Math.floor(Math.random()*100000);
        var b = Math.floor(Math.random()*100000);;
        document.getElementById("number1").innerHTML=a
        document.getElementById("number2").innerHTML=b
        document.getElementById("show").innerHTML="what is the sum of "+a+" and "+b+"?"

        function sum() {
            document.getElementById("result").innerHTML = a + b;
        }
    </script>
